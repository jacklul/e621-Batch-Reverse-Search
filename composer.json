{
  "require": {
    "php": ">=5.6.0",
    "ext-curl": "*",
    "ext-fileinfo": "*",
    "ext-openssl": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "erusev/parsedown": "*"
  },
  "scripts": {
    "check-code": [
      "\"vendor/bin/phpcs\" -snp --standard=PSR2 --encoding=utf-8 --report-width=150 src/"
    ]
  }
}
